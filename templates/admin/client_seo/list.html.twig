{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fa fa-users-cog"></i> Suivi SEO Clients
{% endblock %}

{% block page_content %}
{% include 'admin/dashboard/_partials/_styles.html.twig' %}

<div style="margin-bottom: 1.5rem; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 0.5rem;">
    <div>
        <span style="color: #6b7280; font-size: 0.875rem;">{{ sites|length }} site{{ sites|length > 1 ? 's' : '' }} suivi{{ sites|length > 1 ? 's' : '' }}</span>
    </div>
    <a href="{{ path('admin_client_seo_add_site') }}" class="btn btn-sm btn-primary">
        <i class="fas fa-plus"></i> Ajouter un site
    </a>
</div>

{% if sites|length == 0 %}
<div class="stat-card info" style="text-align: center; padding: 3rem;">
    <i class="fas fa-users-cog" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem; display: block;"></i>
    <div style="font-size: 1.125rem; font-weight: 600; color: #374151; margin-bottom: 0.5rem;">Aucun site client suivi</div>
    <div style="color: #6b7280; margin-bottom: 1.5rem;">Ajoutez un site client pour commencer le suivi SEO automatique via API.</div>
    <a href="{{ path('admin_client_seo_add_site') }}" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter un site client
    </a>
</div>
{% else %}
<div class="dashboard-grid">
    {% for site in sites %}
        {% set summary = summaries[site.id] ?? null %}
        <div class="stat-card" style="cursor: pointer;" onclick="window.location='{{ path('admin_client_seo_dashboard', {id: site.id}) }}'">
            <div class="stat-header">
                <span class="stat-label">{{ site.client.displayName }}</span>
                <div class="stat-icon primary">
                    <i class="fas fa-chart-line"></i>
                </div>
            </div>
            <div style="font-size: 1.125rem; font-weight: 700; color: #111827; margin-bottom: 0.25rem;">
                {{ site.name }}
            </div>
            <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 0.75rem;">
                <i class="fas fa-globe"></i> {{ site.url }}
                {% if site.bingEnabled %}
                    <span style="display: inline-flex; align-items: center; gap: 0.2rem; background: #e0f2fe; color: #0078d4; padding: 0.1rem 0.4rem; border-radius: 4px; font-size: 0.65rem; font-weight: 600; margin-left: 0.25rem;" title="Suivi Bing active">
                        <i class="fab fa-microsoft" style="font-size: 0.6rem;"></i> Bing
                    </span>
                {% endif %}
            </div>
            {% if summary %}
                {% if summary.reportDue or summary.toImproveCount > 0 %}
                <div style="display: flex; flex-wrap: wrap; gap: 0.35rem; margin-bottom: 0.75rem;">
                    {% if summary.reportDue %}
                        <span style="display: inline-flex; align-items: center; gap: 0.25rem; background: #fee2e2; color: #991b1b; padding: 0.15rem 0.5rem; border-radius: 4px; font-size: 0.7rem; font-weight: 600;" title="Compte rendu a preparer">
                            <i class="fas fa-file-alt"></i> CR a faire
                        </span>
                    {% endif %}
                    {% if summary.toImproveCount > 0 %}
                        <span style="display: inline-flex; align-items: center; gap: 0.25rem; background: #dbeafe; color: #1d4ed8; padding: 0.15rem 0.5rem; border-radius: 4px; font-size: 0.7rem; font-weight: 600;" title="Mots-cles a optimiser">
                            <i class="fas fa-wrench"></i> {{ summary.toImproveCount }} a optimiser
                        </span>
                    {% endif %}
                </div>
                {% endif %}
                <div style="display: flex; gap: 1rem; margin-bottom: 0.75rem;">
                    <div>
                        <div style="font-size: 1.5rem; font-weight: 700; color: var(--primary);">{{ summary.totalActiveKeywords }}</div>
                        <div style="font-size: 0.75rem; color: #6b7280;">Mots-cles</div>
                    </div>
                    {% if summary.top3|length > 0 %}
                        <div style="flex: 1;">
                            {% for kw in summary.top3 %}
                                {% set latest = kw.latestPosition %}
                                {% if latest %}
                                    <div style="display: flex; justify-content: space-between; font-size: 0.75rem; padding: 0.125rem 0;">
                                        <span style="color: #374151;">{{ kw.keyword|slice(0, 25) }}{% if kw.keyword|length > 25 %}...{% endif %}</span>
                                        <span style="font-weight: 600; {% if latest.position <= 10 %}color: #10b981;{% elseif latest.position <= 20 %}color: #f59e0b;{% else %}color: #ef4444;{% endif %}">
                                            #{{ latest.position|number_format(1) }}
                                        </span>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            {% endif %}
            <div style="margin-top: 0.75rem; display: flex; gap: 0.5rem;">
                <a href="{{ path('admin_client_seo_dashboard', {id: site.id}) }}" class="btn btn-sm btn-primary" onclick="event.stopPropagation();">
                    <i class="fas fa-chart-line"></i> Dashboard
                </a>
            </div>
        </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
