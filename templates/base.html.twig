<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        {# SEO Meta Tags #}
        <title>{% block title %}Développeur Web Freelance Symfony | Sites Web sur Mesure{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}Développeur web freelance spécialisé Symfony. Création de sites vitrine et e-commerce sur mesure. Accompagnement complet : design, développement, hébergement, SEO et maintenance.{% endblock %}">
        <meta name="keywords" content="développeur web freelance, Symfony, création site internet, e-commerce, développement web, PHP, site sur mesure">
        <meta name="author" content="Fabrice Dhuicque - Alré Web">
        <meta name="robots" content="index, follow">

        {# Open Graph Meta Tags (Facebook, LinkedIn) #}
        <meta property="og:type" content="website">
        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:site_name" content="Alré Web - Développeur Web Freelance">
        <meta property="og:locale" content="fr_FR">
        {% block og_image %}
        <meta property="og:image" content="{{ absolute_url(asset('images/logo-og.png')) }}">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        {% endblock %}

        {# Twitter Card Meta Tags #}
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ block('og_title') }}">
        <meta name="twitter:description" content="{{ block('og_description') }}">
        {% block twitter_image %}
        <meta name="twitter:image" content="{{ absolute_url(asset('images/logo-og.png')) }}">
        {% endblock %}

        {# Favicons - Multi-size et multi-device #}
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('images/favicon-48x48.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/apple-touch-icon.png') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
        <link rel="manifest" href="{{ asset('manifest.json') }}">
        <meta name="theme-color" content="#3A4556">

        {# Fonts & Icons #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

        {# Bootstrap CSS (conservé pour compatibilité admin) #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

        {# Custom CSS #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        {% block stylesheets %}
        {# Page-specific styles #}
        {% endblock %}

        {# Structured Data (JSON-LD) #}
        {% block structured_data %}
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "Alré Web - Développeur Web Freelance",
            "description": "Développeur web freelance spécialisé Symfony pour la création de sites internet et e-commerce sur mesure",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "logo": "{{ absolute_url(asset('images/logo.png')) }}",
            "image": "{{ absolute_url(asset('images/logo.png')) }}",
            "telephone": "06 95 78 69 84",
            "email": "contact@alreweb.fr",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Bretagne",
                "addressCountry": "FR"
            },
            "priceRange": "€€",
            "openingHours": "Mo-Fr 09:00-18:00",
            "sameAs": [
                "https://www.linkedin.com/in/fabrice-dhuicque/"
            ],
            "founder": {
                "@type": "Person",
                "name": "Fabrice Dhuicque",
                "jobTitle": "Développeur Web Freelance",
                "url": "https://www.linkedin.com/in/fabrice-dhuicque/"
            },
            "areaServed": {
                "@type": "Country",
                "name": "France"
            },
            "serviceType": [
                "Développement Web",
                "Création de sites internet",
                "E-commerce",
                "Maintenance web",
                "Référencement SEO"
            ]
        }
        </script>
        {% endblock %}
    </head>
    <body>
        {# Navigation Bar #}
        {% block navbar %}
            {% include 'partials/_navbar.html.twig' %}
        {% endblock %}

        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}" role="alert">
                    <div class="container">
                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background-color: {% if label == 'success' %}#d4edda{% elseif label == 'error' or label == 'danger' %}#f8d7da{% elseif label == 'warning' %}#fff3cd{% else %}#d1ecf1{% endif %}; color: {% if label == 'success' %}#155724{% elseif label == 'error' or label == 'danger' %}#721c24{% elseif label == 'warning' %}#856404{% else %}#0c5460{% endif %}; border-radius: 8px; margin: 1rem 0;">
                            <span>
                                {% if label == 'success' %}
                                    <i class="fas fa-check-circle"></i>
                                {% elseif label == 'error' or label == 'danger' %}
                                    <i class="fas fa-exclamation-circle"></i>
                                {% elseif label == 'warning' %}
                                    <i class="fas fa-exclamation-triangle"></i>
                                {% else %}
                                    <i class="fas fa-info-circle"></i>
                                {% endif %}
                                {{ message }}
                            </span>
                            <button type="button" class="flash-close" style="background: none; border: none; font-size: 1.5rem; cursor: pointer; color: inherit;">&times;</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        {# Main Content #}
        <main>
            {% block body %}{% endblock %}
        </main>

        {# Footer #}
        {% block footer %}
            {% include 'partials/_footer.html.twig' %}
        {% endblock %}

        {# Bootstrap JS (conservé pour compatibilité admin) #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        {# Custom JavaScript #}
        <script src="{{ asset('js/main.js') }}"></script>

        {% block javascripts %}
        {# Page-specific scripts #}
        {% endblock %}

        {# Matomo Analytics - uniquement en production #}
        {% if app.environment == 'prod' %}
        <!-- Matomo -->
        <script>
          var _paq = window._paq = window._paq || [];
          _paq.push(['trackPageView']);
          _paq.push(['enableLinkTracking']);
          (function() {
            var u="//matomo.alre-web.bzh/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '1']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
          })();
        </script>
        <!-- End Matomo Code -->
        {% endif %}
    </body>
</html>
