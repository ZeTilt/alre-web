<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        {# SEO Meta Tags #}
        <title>{% block title %}Développeur Web Freelance | Création de Sites Internet sur Mesure{% endblock %}</title>
        <meta name="description" content="{% block meta_description %}Développeur web freelance à Auray (Morbihan), entre Vannes et Lorient. Création de sites vitrine, e-commerce et applications sur mesure en Bretagne. Page unique dès 493€. Accompagnement complet : design, développement, hébergement et maintenance.{% endblock %}">
        <meta name="keywords" content="développeur web freelance, création site internet, e-commerce, WordPress, Symfony, PHP, site sur mesure, Auray, Vannes, Lorient, Morbihan, Bretagne">
        <meta name="author" content="Fabrice Dhuicque - Alré Web">
        <meta name="robots" content="index, follow">

        {# Canonical URL - Force HTTPS version #}
        <link rel="canonical" href="https://alre-web.bzh{{ app.request.pathinfo }}">

        {# Open Graph Meta Tags (Facebook, LinkedIn) #}
        <meta property="og:type" content="website">
        <meta property="og:title" content="{% block og_title %}{{ block('title') }}{% endblock %}">
        <meta property="og:description" content="{% block og_description %}{{ block('meta_description') }}{% endblock %}">
        <meta property="og:url" content="{{ app.request.uri }}">
        <meta property="og:site_name" content="Alré Web - Développeur Web Freelance">
        <meta property="og:locale" content="fr_FR">
        {% block og_image %}
        <meta property="og:image" content="{{ absolute_url(asset('images/logo-og.png')) }}">
        <meta property="og:image:width" content="1200">
        <meta property="og:image:height" content="630">
        {% endblock %}

        {# Twitter Card Meta Tags #}
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ block('og_title') }}">
        <meta name="twitter:description" content="{{ block('og_description') }}">
        {% block twitter_image %}
        <meta name="twitter:image" content="{{ absolute_url(asset('images/logo-og.png')) }}">
        {% endblock %}

        {# Favicons - Multi-size et multi-device #}
        <link rel="icon" href="{{ asset('favicon.ico') }}" sizes="any">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('images/favicon-16x16.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('images/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="48x48" href="{{ asset('images/favicon-48x48.png') }}">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('images/apple-touch-icon.png') }}">
        <meta name="theme-color" content="#3A4556">

        {# Preconnect to CDNs for faster loading #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        {# FontAwesome Icons - Hosted locally to avoid third-party cookies #}
        <link href="{{ asset('css/fontawesome.min.css') }}" rel="stylesheet" media="print" onload="this.media='all'">
        <noscript><link href="{{ asset('css/fontawesome.min.css') }}" rel="stylesheet"></noscript>

        {# Font Display Fix - Add swap to external fonts #}
        <link rel="stylesheet" href="{{ asset('css/font-display-fix' ~ (app.environment == 'prod' ? '.min' : '') ~ '.css') }}">

        {# Custom CSS - Critical, load synchronously #}
        <link rel="stylesheet" href="{{ asset('css/style' ~ (app.environment == 'prod' ? '.min' : '') ~ '.css') }}">

        {# Print Styles #}
        <link rel="stylesheet" href="{{ asset('css/print' ~ (app.environment == 'prod' ? '.min' : '') ~ '.css') }}" media="print">

        {% block stylesheets %}
        {# Page-specific styles #}
        {% endblock %}

        {# Site Navigation - Signal Google sitelinks #}
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "SiteNavigationElement",
            "name": ["Services", "Portfolio", "À propos", "Écoconception", "Tarifs", "Contact"],
            "url": [
                "{{ url('app_services') }}",
                "{{ url('app_portfolio') }}",
                "{{ url('app_about') }}",
                "{{ url('app_ecoconception') }}",
                "{{ url('app_pricing') }}",
                "{{ url('app_contact') }}"
            ]
        }
        </script>

        {# Structured Data (JSON-LD) #}
        {% block structured_data %}
        <script type="application/ld+json">
        {
            "@context": "https://schema.org",
            "@type": "ProfessionalService",
            "name": "Alré Web - Développeur Web Freelance",
            "description": "Développeur web freelance spécialisé Symfony pour la création de sites internet et e-commerce sur mesure",
            "url": "{{ app.request.schemeAndHttpHost }}",
            "logo": "{{ absolute_url(asset('images/logo-og.png')) }}",
            "image": "{{ absolute_url(asset('images/logo-og.png')) }}",
            "telephone": "06 95 78 69 84",
            "email": "contact@alre-web.bzh",
            "address": {
                "@type": "PostalAddress",
                "streetAddress": "12 rue du Lait",
                "postalCode": "56400",
                "addressLocality": "Auray",
                "addressRegion": "Bretagne",
                "addressCountry": "FR"
            },
            "geo": {
                "@type": "GeoCoordinates",
                "latitude": 47.6683,
                "longitude": -2.9833
            },
            "priceRange": "€€",
            "openingHoursSpecification": {
                "@type": "OpeningHoursSpecification",
                "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
                "opens": "09:00",
                "closes": "18:00"
            },
            "sameAs": [
                "https://www.linkedin.com/in/fabrice-dhuicque/"
            ],
            "founder": {
                "@type": "Person",
                "name": "Fabrice Dhuicque",
                "jobTitle": "Développeur Web Freelance",
                "url": "https://www.linkedin.com/in/fabrice-dhuicque/"
            },
            "areaServed": {
                "@type": "GeoCircle",
                "geoMidpoint": {
                    "@type": "GeoCoordinates",
                    "latitude": 47.6683,
                    "longitude": -2.9833
                },
                "geoRadius": "50000"
            },
            "serviceType": [
                "Développement Web",
                "Création de sites internet",
                "E-commerce",
                "Maintenance web",
                "Référencement SEO"
            ]{% if schema_aggregate_rating %},
            "aggregateRating": {
                "@type": "AggregateRating",
                "ratingValue": "{{ schema_aggregate_rating.ratingValue }}",
                "bestRating": "5",
                "worstRating": "1",
                "reviewCount": "{{ schema_aggregate_rating.reviewCount }}"
            }{% endif %}
        }
        </script>
        {% endblock %}
    </head>
    <body>
        {# Navigation Bar #}
        {% block navbar %}
            {% include 'partials/_navbar.html.twig' %}
        {% endblock %}

        {# Flash Messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-message flash-{{ label }}" role="alert">
                    <div class="container">
                        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1rem; background-color: {% if label == 'success' %}#d4edda{% elseif label == 'error' or label == 'danger' %}#f8d7da{% elseif label == 'warning' %}#fff3cd{% else %}#d1ecf1{% endif %}; color: {% if label == 'success' %}#155724{% elseif label == 'error' or label == 'danger' %}#721c24{% elseif label == 'warning' %}#856404{% else %}#0c5460{% endif %}; border-radius: 8px; margin: 1rem 0;">
                            <span>
                                {% if label == 'success' %}
                                    <i class="fas fa-check-circle"></i>
                                {% elseif label == 'error' or label == 'danger' %}
                                    <i class="fas fa-exclamation-circle"></i>
                                {% elseif label == 'warning' %}
                                    <i class="fas fa-exclamation-triangle"></i>
                                {% else %}
                                    <i class="fas fa-info-circle"></i>
                                {% endif %}
                                {{ message }}
                            </span>
                            <button type="button" class="flash-close" style="background: none; border: none; font-size: 1.5rem; cursor: pointer; color: inherit;">&times;</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        {# Main Content #}
        <main>
            {% block body %}{% endblock %}
        </main>

        {# Footer #}
        {% block footer %}
            {% include 'partials/_footer.html.twig' %}
        {% endblock %}

        {# Custom JavaScript #}
        <script src="{{ asset('js/main' ~ (app.environment == 'prod' ? '.min' : '') ~ '.js') }}"></script>

        {% block javascripts %}
        {# Page-specific scripts #}
        {% endblock %}

        {# Matomo Analytics - uniquement en production #}
        {% if app.environment == 'prod' %}
        <!-- Matomo -->
        <script>
          var _paq = window._paq = window._paq || [];
          /* Configuration */
          _paq.push(['setCookieDomain', '.alre-web.bzh']);
          _paq.push(['enableHeartBeatTimer']);
          /* Tracking */
          _paq.push(['trackPageView']);
          _paq.push(['enableLinkTracking']);
          (function() {
            var u="https://matomo.alre-web.bzh/";
            _paq.push(['setTrackerUrl', u+'matomo.php']);
            _paq.push(['setSiteId', '1']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
          })();
        </script>
        <!-- End Matomo Code -->
        {% endif %}
    </body>
</html>
